{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "module": "es6",
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "build",
        "tests"
    ]
}